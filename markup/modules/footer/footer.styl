.footer
	position relative
	z-index 0
	// margin-top -18px
	min-height 379px
	background url('../images/content/footer-bg.png') 50% 50% repeat-y
	background-size cover
	clearfix()
	&__fade
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background-color $color6
	&__w
		position relative
		z-index 1
		margin-top 200px
		padding-top 74px
		padding-bottom 54px
		background-color $color7
	&__in
		position relative
		@extend .in
		padding-left 20px
		padding-right 20px
		clearfix()
	&__phone
		position relative
		margin-bottom 20px
		padding-top 4px
		padding-left 60px
		float left
		font-family $myriad-pro
		font-size 28px
		font-weight normal
		line-height 1
		color $color2
		letter-spacing tracking(10)
		&:before
			position absolute
			content ""
			top 0
			left 0
			bg($phone)
		+below(890px)
			padding-left 40px
			float left
			font-size 28px
		+below(768px)
			font-size 17px

	&__email
		position relative
		margin-left ratio-percentage(80,900)
		margin-bottom 20px
		padding-left 60px
		float left
		font-family $myriad-pro
		font-size 28px
		font-weight normal
		line-height 1
		color $color2
		letter-spacing tracking(30)
		&:before
			position absolute
			content ""
			top 0
			left 0
			bg($mail-2)
		+below(890px)
			margin-left 0
			margin-bottom 30px
			padding-left 40px
			float left
			clear left
			font-size 28px
		+below(768px)
			font-size 17px
	&__social
		position absolute
		top 0
		right 0
		font-size 0
		+below(640px)
			position static
			top 0
			right 0
			float left
			clear left
	&__social-link
		margin-left 65px
		display inline-block
		vertical-align top
		&:first-child
			margin-left 0
		&_vk
			bg($vk-2)
		&_instagram
			bg($instagram-2)

